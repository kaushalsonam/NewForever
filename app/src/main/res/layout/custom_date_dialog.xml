<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/custom_date_close_btn"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        app:cardCornerRadius="@dimen/dp6"
        app:cardElevation="@dimen/dp10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dotcolor">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_down_arrow" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_date_close_btn"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter"
            android:textColor="@color/et_hint_color"
            android:textSize="@dimen/textsize_sp14" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_date"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_sp20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_to"
                android:textColor="@color/et_hint_color"
                android:textSize="@dimen/textsize_sp12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:text="@string/date_from"
                android:textColor="@color/et_hint_color"
                android:textSize="@dimen/textsize_sp12" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/txt_today_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/gray_rounded_corners_bg"
            android:padding="@dimen/dp5">

            <TextView
                android:id="@+id/txt_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp10"
                android:text="@string/Today"
                android:textColor="@color/et_hint_color" />

            <ImageView
                android:id="@+id/txt_today_iv"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp15"
                android:src="@drawable/ic_disable" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/txt_yesterday_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/gray_rounded_corners_bg"
            android:padding="@dimen/dp5">

            <TextView
                android:id="@+id/txt_yesterday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp10"
                android:text="@string/yesterday"
                android:textColor="@color/et_hint_color" />

            <ImageView
                android:id="@+id/txt_yesterday_iv"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp15"
                android:src="@drawable/ic_disable" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/txt_last_week_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/gray_rounded_corners_bg"
            android:padding="@dimen/dp5">

            <TextView
                android:id="@+id/txt_last_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp10"
                android:text="@string/last_week"
                android:textColor="@color/et_hint_color" />

            <ImageView
                android:id="@+id/txt_last_week_iv"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp15"
                android:src="@drawable/ic_disable" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/txt_last_month_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/gray_rounded_corners_bg"
            android:padding="@dimen/dp5">

            <TextView
                android:id="@+id/txt_last_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp10"
                android:text="@string/last_month"
                android:textColor="@color/et_hint_color" />

            <ImageView
                android:id="@+id/txt_last_month_iv"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp15"
                android:src="@drawable/ic_disable" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/txt_custom_date_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/gray_rounded_corners_bg"
            android:padding="@dimen/dp5">

            <TextView
                android:id="@+id/txt_custom_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp10"
                android:text="@string/custom_date"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/txt_custom_date_iv"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp15"
                android:src="@drawable/ic_enable" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:padding="@dimen/dp5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/txt_date_from"
                android:textColor="@color/dotcolor"
                android:textSize="@dimen/textsize_sp16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/to"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp16" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/txt_date_from"
                android:textColor="@color/dotcolor"
                android:textSize="@dimen/textsize_sp16" />

        </LinearLayout>


        <TextView
            android:id="@+id/done_btn"
            android:layout_width="@dimen/dp130"
            android:layout_height="@dimen/dp45"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp40"
            android:background="@drawable/blue_rounded_corner_btn"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_sp18" />

    </LinearLayout>


</RelativeLayout>