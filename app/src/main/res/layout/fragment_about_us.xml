<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Profile.AboutUsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/back_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:elevation="@dimen/dp20">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp30"
                android:src="@drawable/ic_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/aboutus"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp18" />


            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp30"
                android:src="@drawable/ic_close"
                app:tint="@color/black" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/terms_and_condition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/back_rl"
        android:background="@color/et_bg_color"
        android:fontFamily="@font/poppins"
        android:padding="@dimen/dp40"
        android:text="@string/terms_privacy_string"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_sp14" />

</RelativeLayout>