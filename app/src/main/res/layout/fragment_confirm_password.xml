                    android:id="@+id/otp_et_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:gravity="center"
                    android:hint="-"
                    android:elevation="@dimen/dp6"
                    android:layout_weight="1"
                    android:background="@drawable/rounde_corner_white_bg_without_strock"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:layout_margin="@dimen/dp5"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

<!--            </androidx.cardview.widget.CardView>-->


<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="@dimen/dp5"-->
<!--                android:layout_weight="1"-->
<!--                android:background="@drawable/rounded_corner_white_bg_blue_strock"-->
<!--                app:cardCornerRadius="@dimen/dp4"-->
<!--                app:cardElevation="@dimen/dp6">-->

                <EditText
                    android:id="@+id/otp_et_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:elevation="@dimen/dp6"
                    android:hint="-"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp5"
                    android:background="@drawable/rounde_corner_white_bg_without_strock"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

<!--            </androidx.cardview.widget.CardView>-->


