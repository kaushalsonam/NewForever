<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.loginSignup.ConfirmPasswordFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/back_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:elevation="@dimen/dp20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp30"
                android:src="@drawable/ic_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/reset_password"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp20" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/next_rl"
        android:layout_below="@id/back_rl"
        android:background="@color/et_bg_color">

        <LinearLayout
            android:id="@+id/txt_recovery_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginTop="@dimen/dp50"
            android:layout_marginRight="@dimen/dp70"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:text="@string/enter_code"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp20" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:text="@string/recover_code_string"
                android:textColor="@color/et_hint_color"
                android:textSize="@dimen/textsize_sp12" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_recovery_title"
            android:layout_margin="@dimen/dp20"
            android:orientation="horizontal">

<!--            <androidx.cardview.widget.CardView-->
