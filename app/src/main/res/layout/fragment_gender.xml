<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GenderFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/back_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:elevation="@dimen/dp20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp30"
                android:src="@drawable/ic_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/gender"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp18" />


            <TextView
                android:id="@+id/txt_skip_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp30"
                android:text="@string/skip"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp14" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/save_rl"
        android:layout_below="@id/back_rl">

        <LinearLayout
            android:id="@+id/txt_recovery_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp50"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="@string/selec_gender"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp22" />

            <LinearLayout
                android:id="@+id/gender_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_marginTop="@dimen/dp80"
                android:layout_marginRight="@dimen/dp40"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="@dimen/dp10"
                            app:cardElevation="@dimen/dp6">


                            <ImageView
                                android:id="@+id/male_icon"
                                android:layout_width="@dimen/dp60"
                                android:layout_height="@dimen/dp60"
                                android:padding="@dimen/dp15"
                                android:src="@drawable/ic_male_gen" />

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:id="@+id/txt_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp10"
                            android:gravity="center"
                            android:text="@string/male"
                            android:textColor="@color/non_binary"
                            android:textSize="@dimen/textsize_sp16" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="@dimen/dp10"
                            app:cardElevation="@dimen/dp6">


                            <ImageView
                                android:id="@+id/female_icon"
                                android:layout_width="@dimen/dp60"
                                android:layout_height="@dimen/dp60"
                                android:padding="@dimen/dp15"
                                android:src="@drawable/ic_female_gen" />

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:id="@+id/txt_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp10"
                            android:gravity="center"
                            android:text="@string/female"
                            android:textColor="@color/non_binary"
                            android:textSize="@dimen/textsize_sp16" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="@dimen/dp10"
                        app:cardElevation="@dimen/dp6">


                        <ImageView
                            android:id="@+id/non_binary_icon"
                            android:layout_width="@dimen/dp60"
                            android:layout_height="@dimen/dp60"
                            android:padding="@dimen/dp15"
                            android:src="@drawable/ic_non_binary_gen" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/txt_non_binary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp10"
                        android:gravity="center"
                        android:text="@string/non_binary"
                        android:textColor="@color/non_binary"
                        android:textSize="@dimen/textsize_sp16" />


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/txt_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="@string/error"
                android:textColor="@color/dark_pink"
                android:textSize="@dimen/textsize_sp14"
                android:visibility="gone" />


        </LinearLayout>


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/save_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/dp20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp30"
                android:text="@string/save"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp18" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/save_btn"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginBottom="@dimen/dp30"
        android:elevation="@dimen/dp10"
        app:cardCornerRadius="@dimen/dp6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dotcolor">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_next" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>