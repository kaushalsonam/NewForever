<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/et_bg_color"
    android:orientation="vertical"
    tools:context=".fragments.Profile.HelpCenterFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/back_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:elevation="@dimen/dp20">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp30"
                android:src="@drawable/ic_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/help_center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp18" />


            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp30"
                android:src="@drawable/ic_close"
                app:tint="@color/black" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginTop="@dimen/dp50"
        android:layout_marginRight="@dimen/dp30"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounde_corner_white_bg"
            android:hint="@string/fullname"
            android:fontFamily="@font/poppins_light"
            android:imeOptions="actionNext"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="@dimen/dp15"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/et_hint_color"
            android:textSize="@dimen/textsize_sp14" />

        <EditText
            android:id="@+id/issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/rounde_corner_white_bg"
            android:fontFamily="@font/poppins_light"
            android:hint="@string/issue"
            android:imeOptions="actionNext"
            android:padding="@dimen/dp15"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/et_hint_color"
            android:textSize="@dimen/textsize_sp14" />


        <EditText
            android:id="@+id/discription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp200"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/rounde_corner_white_bg"
            android:gravity="top"
            android:fontFamily="@font/poppins_light"
            android:hint="@string/detail"
            android:imeOptions="actionDone"
            android:padding="@dimen/dp15"
            android:textColor="@color/black"
            android:textColorHint="@color/et_hint_color"
            android:textSize="@dimen/textsize_sp14" />


        <TextView
            android:id="@+id/send_btn"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp35"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginRight="@dimen/dp5"
            android:background="@drawable/rounded_corner_btn"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_sp18" />


    </LinearLayout>

</LinearLayout>