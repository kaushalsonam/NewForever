<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.onBoardingScreens.OnBoardScreen1Fragment">


    <TextView
        android:id="@+id/done_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:text="@string/done"
        android:visibility="invisible"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/screen_img_1"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/done_btn"
        android:layout_marginTop="10dp"
        android:src="@drawable/screen3" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_img_1"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/screen_1_text"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_sp16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="-70dp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/dot1"
            android:textSize="120sp"
            android:textColor="@color/dotcolorlight"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/dot2"
            android:textSize="120sp"
            android:textColor="@color/dotcolorlight"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/dot3"
            android:textSize="120sp"
            android:textColor="@color/dotcolor"/>

    </LinearLayout>

</RelativeLayout>