<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.PointsSummaryFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/back_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp20">

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp70">


            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp30"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/txt_points_Sammary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/points_summary"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp18"

                />

            <ImageView
                android:id="@+id/info_btn"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toRightOf="@id/txt_points_Sammary"
                android:src="@drawable/ic_info"
                app:tint="@color/dotcolor" />


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/toggle_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp50"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:textColor="@color/dotcolor"
                android:textOn="2100"
                android:thumb="@drawable/button_selector"
                app:switchMinWidth="@dimen/dp40"

                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back_cv"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:text="@string/activity"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_sp18" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_skyblue"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="@string/day"
                android:textColor="@color/dotcolor"
                android:textSize="@dimen/textsize_sp14" />

            <TextView
                android:id="@+id/txt_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_skyblue"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="@string/week"
                android:textColor="@color/dotcolor"
                android:textSize="@dimen/textsize_sp14" />

            <TextView
                android:id="@+id/txt_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_skyblue"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="@string/month"
                android:textColor="@color/dotcolor"
                android:textSize="@dimen/textsize_sp14" />

            <TextView
                android:id="@+id/txt_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_skyblue"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="@string/year"
                android:textColor="@color/dotcolor"
                android:textSize="@dimen/textsize_sp14" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp250"
            android:layout_marginTop="@dimen/dp80"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp20">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/points_ll"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_sp12"
                    android:padding="@dimen/dp10"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/dp10"
                    android:textSize="@dimen/textsize_sp12"
                    android:padding="@dimen/dp10"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_sp12"
                    android:padding="@dimen/dp10"
                    android:layout_weight="1"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@id/points_ll"
                >

                <com.hadiidbouk.charts.ChartProgressBar
                    android:id="@+id/ChartProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    app:hdBarCanBeClick="true"
                    app:hdBarHeight="170dp"
                    app:hdBarWidth="7dp"
                    app:hdBarRadius="10dp"
                    app:hdMaxValue="10"
                    app:hdEmptyColor="@color/empty"
                    app:hdProgressColor="@color/progress"
                    app:hdProgressClickColor="@color/progress_click"
                    app:hdPinBackgroundColor="@color/pin_background"
                    app:hdPinTextColor="@color/pin_text"
                    app:hdPinPaddingBottom="5dp"
                    app:hdBarTitleColor="@color/bar_title_color"
                    app:hdBarTitleTxtSize="12sp"
                    app:hdPinTxtSize="17sp"
                    app:hdPinMarginTop="10dp"
                    app:hdPinMarginBottom="55dp"
                    app:hdPinMarginEnd="22dp"
                    app:hdBarTitleMarginTop="9dp"
                    app:hdProgressDisableColor="@color/progress_disable"
                    app:hdBarTitleSelectedColor="@color/dotcolor"/>


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>