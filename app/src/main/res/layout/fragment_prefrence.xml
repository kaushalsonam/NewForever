<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.Profile.PrefrenceFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/back_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:elevation="@dimen/dp20">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp30"
                android:src="@drawable/ic_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/prefrence"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp18" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp40"
        android:layout_marginRight="@dimen/dp20"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10">

            <ImageView
                android:id="@+id/ic_distamce"
                android:layout_width="@dimen/dp12"
                android:layout_height="@dimen/dp12"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_distance" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toRightOf="@id/ic_distamce"
                android:text="@string/distance"
                android:textColor="@color/dotcolor"
                android:textSize="@dimen/textsize_sp16" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="@dimen/dp40"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp25"
                    android:layout_margin="@dimen/dp2"
                    android:background="@drawable/complete_rounded_corner">


                    <TextView
                        android:id="@+id/km_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/km"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp10" />

                    <ImageView
                        android:layout_width="@dimen/dp5"
                        android:layout_height="@dimen/dp5"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp4"
                        android:layout_toRightOf="@id/km_tv"
                        android:src="@drawable/ic_dropdown" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/view_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10">

            <ImageView
                android:id="@+id/ic_language"
                android:layout_width="@dimen/dp12"
                android:layout_height="@dimen/dp12"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_language" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toRightOf="@id/ic_language"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/language"
                android:textColor="@color/dotcolor"
                android:textSize="@dimen/textsize_sp16" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="@dimen/dp40"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp25"
                    android:layout_margin="@dimen/dp2"
                    android:background="@drawable/complete_rounded_corner">


                    <TextView
                        android:id="@+id/eng_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/eng"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp10" />

                    <ImageView
                        android:layout_width="@dimen/dp5"
                        android:layout_height="@dimen/dp5"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp4"
                        android:layout_toRightOf="@id/eng_tv"
                        android:src="@drawable/ic_dropdown" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/view_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10">

            <ImageView
                android:id="@+id/ic_notification"
                android:layout_width="@dimen/dp12"
                android:layout_height="@dimen/dp12"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_notification" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toRightOf="@id/ic_notification"
                android:text="@string/notification"
                android:textColor="@color/dotcolor"
                android:textSize="@dimen/textsize_sp16" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/dotcolor"
                app:cardCornerRadius="@dimen/dp40"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp25"
                    android:layout_margin="@dimen/dp2"
                    android:background="@drawable/complete_rounded_corner"
                    android:backgroundTint="@color/white">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/notification_switch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:thumb="@drawable/thumb_nail"
                        app:switchMinWidth="@dimen/dp30"
                        app:track="@drawable/track_selector" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/view_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10">

            <ImageView
                android:id="@+id/ic_reminder"
                android:layout_width="@dimen/dp12"
                android:layout_height="@dimen/dp12"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_notification" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toRightOf="@id/ic_reminder"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/reminder"
                android:id="@+id/txt_reminder"
                android:textColor="@color/dotcolor"
                android:textSize="@dimen/textsize_sp16" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/dotcolor"
                app:cardCornerRadius="@dimen/dp40"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp25"
                    android:layout_margin="@dimen/dp2"
                    android:background="@drawable/complete_rounded_corner"
                    android:backgroundTint="@color/white">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/reminder_switch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:thumb="@drawable/thumb_nail"
                        app:switchMinWidth="@dimen/dp30"
                        app:track="@drawable/track_selector" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:padding="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_time"
            android:fontFamily="@font/poppins"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize_sp12"
            android:textColor="@color/et_hint_color"
         />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize_sp12"
                android:textColor="@color/dotcolor"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp20"
                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/view_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daily_goals"
                android:layout_marginLeft="@dimen/dp5"
                android:fontFamily="@font/poppins"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize_sp12"
                android:textColor="@color/et_hint_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize_sp12"
                android:textColor="@color/dotcolor"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp20"
                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/view_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_reminder"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/textsize_sp12"
                android:textColor="@color/et_hint_color"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/dotcolor"
                app:cardCornerRadius="@dimen/dp40"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp25"
                    android:layout_margin="@dimen/dp2"
                    android:background="@drawable/complete_rounded_corner"
                    android:backgroundTint="@color/white">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/general_reminder_switch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:thumb="@drawable/thumb_nail"
                        app:switchMinWidth="@dimen/dp30"
                        app:track="@drawable/track_selector" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>