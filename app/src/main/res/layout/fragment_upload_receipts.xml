<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/et_bg_color"
    android:orientation="vertical"
    tools:context=".fragments.home.UploadReceiptsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/back_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:elevation="@dimen/dp20">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp30"
                android:src="@drawable/ic_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/upload_receipts"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp18" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp30"
        android:background="@drawable/rounde_corner_white_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/non_binary"
            android:textSize="@dimen/textsize_sp14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp5"
            android:background="@drawable/rounded_corner_white_bg_grey_strock"
            android:padding="@dimen/dp5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:padding="@dimen/dp5"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/healthy_food"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp14" />

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:src="@drawable/ic_drop_down" />


        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:fontFamily="@font/poppins_light"
            android:text="@string/amount_spent"
            android:textColor="@color/non_binary"
            android:textSize="@dimen/textsize_sp14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp5"
            android:background="@drawable/rounded_corner_white_bg_grey_strock"
            android:padding="@dimen/dp5">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:padding="@dimen/dp5"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/thb"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp14" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:text="@string/attached_document"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/non_binary"
            android:textSize="@dimen/textsize_sp14" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp5"
            android:background="@drawable/rounded_corner_white_bg_grey_strock"
            android:orientation="horizontal"
            android:padding="@dimen/dp5">


            <RelativeLayout
                android:id="@+id/uplod_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp10">


                <ImageView
                    android:id="@+id/ic_upload_icon"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/dp10"
                    android:src="@drawable/ic_upload_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_upload_icon"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/dp10"
                    android:text="@string/browse_file"
                    android:textColor="@color/black" />


            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:background="@color/et_bg_color" />


            <RelativeLayout
                android:id="@+id/open_camera_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp10">


                <ImageView
                    android:id="@+id/ic_open_camera"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/dp10"
                    android:src="@drawable/ic_camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_open_camera"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="@dimen/dp10"
                    android:text="@string/open_camera"
                    android:textColor="@color/black" />

            </RelativeLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp50"
            android:gravity="right">

            <ImageView
                android:id="@+id/ic_lock"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_lock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toRightOf="@id/ic_lock"
                android:text="@string/secure" />


        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/send_btn"
        android:layout_width="@dimen/dp150"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:background="@drawable/rounded_corner_btn"
        android:gravity="center"
        android:padding="@dimen/dp5"
        android:fontFamily="@font/poppins"
        android:text="@string/send"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_sp18" />

</LinearLayout>