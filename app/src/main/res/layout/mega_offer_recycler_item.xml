<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp160"
    android:layout_margin="@dimen/dp12"
    android:background="@drawable/dashed_rounde_corner"
    android:elevation="@dimen/dp10">

    <RelativeLayout
        android:id="@+id/bg_color_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp5"
        android:background="@drawable/pink_rounded_corner_bg">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp5"
            android:text="AD"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_sp16" />

        <ImageView
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp150"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp50"
            android:src="@drawable/ic_ad_poster" />

        <ImageView
            android:id="@+id/next_arrow"
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp40"
            android:src="@drawable/ic_right_arrow"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/seemore_btn"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp40"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/rounde_corner_white_bg_without_strock"
            android:gravity="center"
            android:text="@string/see_more"
            android:textColor="@color/dark_pink"
            android:textSize="@dimen/textsize_sp16" />


    </RelativeLayout>


</RelativeLayout>
