<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp190"
    android:background="@drawable/dashed_rounde_corner"
    android:layout_margin="@dimen/dp10"
    app:cardCornerRadius="@dimen/dp15"
    app:cardElevation="@dimen/dp6">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp180"
        android:background="@drawable/dashed_rounde_corner">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp180"

            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/icon_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logo_image"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp15"
                    android:src="@mipmap/app_logo"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="@dimen/dp2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_toRightOf="@+id/logo_image"
                    android:text="@string/demo_string"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_sp16" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/next_btn"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp20"
                android:src="@drawable/ic_right_arrow"
                app:tint="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/next_btn"
                android:layout_marginLeft="@dimen/dp15">

                <LinearLayout
                    android:id="@+id/terms_and_condition_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expired"
                        android:textColor="@color/non_binary"
                        android:textSize="@dimen/textsize_sp12" />


                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp4"
                        android:text="@string/date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_sp18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/terms_and_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_apply"
                        android:textColor="@color/dotcolor"
                        android:textSize="@dimen/textsize_sp14" />


                </LinearLayout>


                <TextView
                    android:layout_width="@dimen/dp120"
                    android:layout_height="@dimen/dp35"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp40"
                    android:layout_marginRight="@dimen/dp20"
                    android:background="@drawable/rounded_corner_btn"
                    android:gravity="center"
                    android:text="@string/txt_share"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_sp18" />


            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>