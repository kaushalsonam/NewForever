<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp160"
    android:layout_margin="@dimen/dp12"
    android:background="@drawable/dashed_rounde_corner"
    android:elevation="@dimen/dp10">

    <RelativeLayout
        android:id="@+id/bg_color_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp4"
        android:background="@drawable/white_rounded_corner_white_bg">

        <RelativeLayout
            android:id="@+id/icon_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo_image"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp15"
                android:src="@mipmap/app_logo" />

            <TextView
                android:id="@+id/txt_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp15"
                android:fontFamily="@font/poppins"
                android:layout_marginRight="@dimen/dp20"
                android:layout_toRightOf="@+id/logo_image"
                android:text="@string/demo_string"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_sp16" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/next_btn"
            android:layout_width="@dimen/dp10"
            android:layout_height="@dimen/dp10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp20"
            android:src="@drawable/ic_right_arrow"
            app:tint="@color/black" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/next_btn"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="-10dp">

            <LinearLayout
                android:id="@+id/terms_and_condition_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expired"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/non_binary"
                    android:textSize="@dimen/textsize_sp12" />


                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp2"
                    android:fontFamily="@font/poppins"
                    android:text="@string/date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_sp18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/terms_and_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="@string/terms_apply"
                    android:textColor="@color/dotcolor"
                    android:textSize="@dimen/textsize_sp14" />


            </LinearLayout>


            <TextView
                android:layout_width="@dimen/dp120"
                android:layout_height="@dimen/dp35"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp30"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/rounded_corner_btn"
                android:gravity="center"
                android:text="@string/txt_share"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_sp18" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>



