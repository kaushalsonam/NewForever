<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Forever" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="DialogDim" parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <!--        <item name="android:windowFrame">@null</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--        <item name="android:windowIsFloating">true</item>-->
        <!--        <item name="android:windowContentOverlay">@null</item>-->
        <!--        <item name="android:windowTitleStyle">@null</item>-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>

    </style>



    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_width">wrap_content</item>
        <item name="colorAccent">@color/dotcolor</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="BottomNavigationViewTextStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        ...
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        ...
    </style>

    <style name="BottomNavigationViewTextStyleInActive" parent="Widget.MaterialComponents.BottomNavigationView">
        ...
        <item name="android:textColorPrimary">@color/et_hint_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        ...
    </style>


</resources>